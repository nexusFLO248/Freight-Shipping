      <Header />
      {/* The main content area with a gold background to draw the eye */}
      <main className="flex-grow flex flex-col items-center justify-center w-full bg-[#D4B04C]/30 p-8">
        <div className="bg-white p-12 rounded-3xl shadow-2xl w-full max-w-2xl transform transition-all duration-500 ease-in-out">
          <h2 className="text-4xl font-extrabold text-[#005022] mb-2 text-center">Your freight, delivered with confidence.</h2>
