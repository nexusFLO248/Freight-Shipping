            <button
              onClick={() => navigateTo('ship-now-confirm')}
              className="flex-1 flex flex-col items-center justify-center space-y-3 bg-[#005022] text-white p-8 rounded-2xl shadow-xl hover:bg-[#00662d] transition-colors duration-300 transform hover:scale-105"
            >
              <svg xmlns="http://www.w3.org/2000/svg" className="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <span className="font-bold text-xl">Ship Now</span>
            </button>
            <button className="flex-1 flex flex-col items-center justify-center space-y-3 bg-[#ccd4d3] text-gray-800 p-8 rounded-2xl shadow-xl hover:bg-[#b0c0c0] transition-colors duration-300 transform hover:scale-105">
              <svg xmlns="http://www.w3.org/2000/svg" className="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
              </svg>
              <span className="font-bold text-xl">Get a Quote</span>
            </button>
          </div>
        </div>
      </main>
      <Footer />
    </div>
  );

  // New second page: Confirming "Ship Now"
  const ShipNowConfirmPage = () => (
    <div className="flex flex-col items-center bg-[#fcfaf5] min-h-screen font-inter">
      <Header />
      <main className="flex-grow flex flex-col items-center justify-center p-8 w-full">
        <div className="bg-white p-8 rounded-2xl shadow-xl w-full max-w-lg mb-8">
          <h2 className="text-2xl font-extrabold text-[#005022] mb-6 text-center">Confirm your shipping choice</h2>
          <div className="flex flex-col md:flex-row space-y-4 md:space-y-0 md:space-x-4 w-full">
            <div className="flex-1 flex flex-col items-center justify-center space-y-2 bg-[#D4B04C] border-4 border-[#005022] text-[#005022] p-6 rounded-xl shadow-lg">
              <svg xmlns="http://www.w3.org/2000/svg" className="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <span className="font-bold text-lg">Ship Now</span>
            </div>
            <div className="flex-1 flex flex-col items-center justify-center space-y-2 bg-[#ccd4d3] text-gray-800 p-6 rounded-xl shadow-lg">
              <svg xmlns="http://www.w3.org/2000/svg" className="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
              </svg>
              <span className="font-semibold text-lg">Get a Quote</span>
            </div>
          </div>
          <div className="flex justify-center mt-8">
            <button
              onClick={() => navigateTo('date')}
              className="bg-[#005022] text-white px-12 py-4 rounded-full font-bold shadow-xl hover:bg-[#00662d] transition-colors duration-300 transform hover:scale-105"
            >
              Continue &gt;
            </button>
          </div>
        </div>
      </main>
      <Footer />
    </div>
  );

  // Component for the third page: Estimated Shipping Date
  const EstimatedShippingDate = () => (
    <div className="flex flex-col items-center bg-[#fcfaf5] min-h-screen font-inter">
      <Header />
      <main className="flex-grow flex flex-col items-center justify-center p-8 w-full">
        <div className="bg-white p-8 rounded-2xl shadow-xl w-full max-w-lg mb-8">
          <h2 className="text-2xl font-extrabold text-[#005022] mb-6 text-center">Estimated Shipping Date</h2>
          <div className="flex flex-col w-full justify-between items-center mb-8">
            <label htmlFor="shipping-date" className="text-md font-medium text-gray-600 mb-2">Select your shipping date:</label>
            <select id="shipping-date" className="p-3 border-2 border-gray-300 rounded-lg focus:outline-none focus:ring-4 focus:ring-[#D4B04C] focus:border-[#D4B04C] w-full text-center">
              <option>Friday, August 12 - Latest by the end of the day</option>
            </select>
          </div>
          <div className="flex flex-wrap justify-center gap-4 w-full mb-8">
            <button className="px-6 py-3 border-2 border-gray-300 rounded-full text-gray-700 font-semibold hover:bg-gray-100 transition-colors duration-300">Email Quote</button>
            <button className="px-6 py-3 border-2 border-gray-300 rounded-full text-gray-700 font-semibold hover:bg-gray-100 transition-colors duration-300">Copy Link</button>
            <button className="px-6 py-3 border-2 border-gray-300 rounded-full text-gray-700 font-semibold hover:bg-gray-100 transition-colors duration-300">Print Quote</button>
          </div>
          <div className="flex justify-center">
            <button
              onClick={() => navigateTo('price')}
              className="bg-[#005022] text-white px-12 py-4 rounded-full font-bold shadow-xl hover:bg-[#00662d] transition-colors duration-300 transform hover:scale-105"
            >
              Continue &gt;
            </button>
          </div>
        </div>
      </main>
      <Footer />
    </div>
  );

