            <img src="http://googleusercontent.com/file_content/1" alt="UPS Logo" className="h-10 rounded-md bg-white p-2" />
            <img src="http://googleusercontent.com/file_content/2" alt="USPS Logo" className="h-10 rounded-md bg-white p-2" />
          </div>
          <div className="w-full space-y-4">
            <div
              className={`flex justify-between items-center p-6 rounded-xl cursor-pointer transition-all duration-300 shadow-md ${
                selectedShipping === 'fedex3-4' ? 'bg-[#D4B04C] border-4 border-[#005022] transform scale-105' : 'bg-[#ccd4d3] hover:bg-[#b0c0c0]'
              }`}
              onClick={() => handleShippingSelect('fedex3-4')}
            >
              <span className={`font-bold text-lg ${selectedShipping === 'fedex3-4' ? 'text-[#005022]' : 'text-gray-700'}`}>FedEx</span>
              <span className={`text-md ${selectedShipping === 'fedex3-4' ? 'text-gray-800' : 'text-gray-600'}`}>3 - 4 Days</span>
              <span className={`font-bold text-lg ${selectedShipping === 'fedex3-4' ? 'text-[#005022]' : 'text-gray-700'}`}>$150.00</span>
            </div>
            <div
              className={`flex justify-between items-center p-6 rounded-xl shadow-md cursor-pointer transition-all duration-300 bg-[#ccd4d3] hover:bg-[#b0c0c0]`}
              onClick={() => handleShippingSelect('fedex1-2')}
            >
              <span className="font-bold text-lg text-gray-700">FedEx</span>
              <span className="text-md text-gray-600">1 - 2 Days</span>
              <span className="font-bold text-lg text-gray-700">$180.00</span>
            </div>
            <div
              className={`flex justify-between items-center p-6 rounded-xl shadow-md cursor-pointer transition-all duration-300 bg-[#ccd4d3] hover:bg-[#b0c0c0]`}
              onClick={() => handleShippingSelect('fedexOvernight')}
            >
              <span className="font-bold text-lg text-gray-700">FedEx</span>
              <span className="text-md text-gray-600">Overnight</span>
            </div>
          </div>
          <div className="flex justify-center mt-8">
            <button
              onClick={() => handleShippingSelect(selectedShipping)}
              className="bg-[#005022] text-white px-12 py-4 rounded-full font-bold shadow-xl hover:bg-[#00662d] transition-colors duration-300 transform hover:scale-105"
            >
              Continue &gt;
            </button>
          </div>
        </div>
      </main>

      {/* Confirmation Modal */}
      {showConfirmation && (
        <div className="absolute inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
          <div className="bg-white p-8 rounded-2xl shadow-xl text-center max-w-sm w-full font-inter">
            <p className="text-xl font-extrabold mb-6 text-[#005022]">Confirm your shipping selection?</p>
            <div className="flex justify-center space-x-4">
              <button
                onClick={handleConfirmation}
                className="bg-[#005022] text-white px-8 py-3 rounded-full font-bold hover:bg-[#00662d] transition-colors duration-300"
              >
                Confirm
              </button>
              <button
                onClick={() => setShowConfirmation(false)}
                className="bg-gray-300 text-gray-800 px-8 py-3 rounded-full font-bold hover:bg-gray-400 transition-colors duration-300"
              >
                Cancel
              </button>
            </div>
          </div>
        </div>
      )}

      <Footer />
    </div>
  );

  // Component for payment
  const PaymentMethod = () => (
    <div className="flex flex-col items-center bg-[#fcfaf5] min-h-screen relative font-inter">
      <Header />
      <main className="flex-grow flex flex-col items-center justify-center p-8 w-full">
        <div className="bg-white p-8 rounded-2xl shadow-xl w-full max-w-lg mb-8">
          <h2 className="text-2xl font-extrabold text-[#005022] mb-6 text-center">Payment Method</h2>
          <p className="text-center text-gray-600 mb-6">Select a payment option</p>
          <div className="flex flex-col space-y-4">
            <button className="flex items-center justify-between p-4 border-2 border-gray-300 rounded-xl hover:bg-gray-100 transition-colors duration-300">
              <span className="font-semibold text-lg">Pay with Card</span>
              <svg xmlns="http://www.w3.org/2000/svg" className="h-6 w-6 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
              </svg>
            </button>
            <button className="flex items-center justify-between p-4 border-2 border-gray-300 rounded-xl hover:bg-gray-100 transition-colors duration-300">
              <span className="font-semibold text-lg">Pay with PayPal</span>
              <svg xmlns="http://www.w3.org/2000/svg" className="h-6 w-6 text-gray-500" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zM8.136 17.65c-.17-.11-.278-.292-.278-.492v-3.8c0-.204.108-.386.278-.496l4.242-2.45c.168-.096.37-.156.592-.156s.424.06.592.156l4.242 2.45c.17.11.278.292.278.496v3.8c0 .2-.108.382-.278.492l-4.242 2.45c-.168.096-.37.156-.592.156s-.424-.06-.592-.156L8.136 17.65zM12 21.05c-3.116 0-5.65-2.534-5.65-5.65v-6.8c0-3.116 2.534-5.65 5.65-5.65s5.65 2.534 5.65 5.65v6.8c0 3.116-2.534 5.65-5.65 5.65z"/>
              </svg>
            </button>
          </div>
        </div>
      </main>
      <Footer />
    </div>
  );


  // Render the appropriate page based on the 'page' state
  switch (page) {
    case 'ship-now-confirm':
      return <ShipNowConfirmPage />;
    case 'date':
      return <EstimatedShippingDate />;
    case 'price':
      return <EstimatedShippingPrice />;
    case 'payment':
      return <PaymentMethod />;
    case 'landing':
    default:
      return <LandingPage />;
  }
};

export default App;

